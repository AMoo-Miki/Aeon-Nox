<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">4012</defaultcontrol>
	<zorder>1</zorder>
	<controls>
	<include>animation_fade_visible_hidden</include>
		<!-- background -->
		<control type="image">
			<left>0</left>
			<top>0</top>
			<width>100%</width>
			<height>100%</height>
			<texture border="5">upnext/Grey.png</texture>
			<colordiffuse>34242424</colordiffuse>
		</control>
		<!-- Still watching dialog -->
		<control type="group">
			<top>500</top>
			<width>100%</width>
			<height>300</height>
			<control type="group">
				<!-- Still There ? -->
				<control type="label">
					<align>center</align>
					<width>100%</width>
					<height>50</height>
					<font>fontArial15</font>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
					<label>$ADDON[service.nextup.notification 30024]</label>
				</control>
				<!-- Buttons -->
				<control type="grouplist">
					<top>75</top>
					<orientation>horizontal</orientation>
					<height>65</height>
					<width>100%</width>
					<align>center</align>
					<!-- Continue Watching -->
					<control type="button" id="4012">
						<width>500</width>
						<height>65</height>
						<align>center</align>
						<onright>4013</onright>
						<textoffsetx>10</textoffsetx>
						<label>[CAPITALIZE]$LOCALIZE[31835][/CAPITALIZE]</label>
						<aligny>center</aligny>
						<font>font13</font>
						<textcolor>white</textcolor>
						<focusedcolor>white</focusedcolor>
						<texturefocus colordiffuse="white">upnext/border_netflix.png</texturefocus>
						<texturenofocus></texturenofocus>
					</control>
					<!-- Cancel -->
					<control type="button" id="4013">
						<width>500</width>
						<height>65</height>
						<align>center</align>
						<aligny>center</aligny>
						<onleft>4012</onleft>
						<label>222</label>
						<font>font13</font>
						<textcolor>white</textcolor>
						<focusedcolor>white</focusedcolor>
						<texturefocus colordiffuse="white">upnext/border_netflix.png</texturefocus>
						<texturenofocus></texturenofocus>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>
